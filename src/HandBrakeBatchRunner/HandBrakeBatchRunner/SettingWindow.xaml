<Window x:Class="HandBrakeBatchRunner.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandBrakeBatchRunner"
        mc:Ignorable="d"
        Title="SettingWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Label Content="HandBrakeCLIパス" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Right" Width="632" Margin="0,0,24,0"/>

        <Label Content="変換設定名" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>
        <ListBox Grid.Column="1" Grid.Row="1" Height="173" VerticalAlignment="Stretch"/>

        <Label Content="変換コマンド" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="1" Text="TextBox" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,173,0,0" Grid.RowSpan="2"/>
        <StackPanel Grid.Column="2" Grid.Row="1">
            <Button Content="Button"/>
            <Button Content="Button"/>
        </StackPanel>



    </Grid>
</Window>
