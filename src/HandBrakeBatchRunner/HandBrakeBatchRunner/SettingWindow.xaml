<Window x:Class="HandBrakeBatchRunner.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandBrakeBatchRunner"
        mc:Ignorable="d"
        Title="SettingWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Label Content="HandBrakeCLIパス" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="HandBrakeCLIFilePath" Grid.Column="1" Text="" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="2,2,2,2"/>
        <Button Content="..." Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="OpenFileButton_Click" Margin="5,0,5,0" Height="30" />

        <Label Content="変換設定名" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>
        <ListBox Name="ConvertSettingListBox" Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" ItemsSource="{Binding}" Margin="2,2,2,2" SelectionChanged="ConvertSettingListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ConvertSettingName}" TextTrimming="CharacterEllipsis"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="2" Grid.Row="1">
            <Button Content="追加" Height="30" Margin="5,10,5,5" Click="AddSettingButton_Click" />
            <Button Content="削除" Height="30" Margin="5,5,5,5" Click="DeleteSettingButton_Click"/>
        </StackPanel>

        <Label Content="変換コマンド" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox Name="CommandTemplateText" Grid.Column="1" Grid.Row="2" Text="" TextWrapping="Wrap" AcceptsReturn="True" AutoWordSelection="True" VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="2,2,2,2"/>
        <Button Content="更新" Click="ConvertSettingModify_Click" Margin="5,5,5,0" Grid.Column="2" Grid.Row="2" VerticalAlignment="Top" Height="30" />

    </Grid>
</Window>
